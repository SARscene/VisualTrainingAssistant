<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.reconinstruments.demo.compass"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="16" />

    <meta-data
        android:name="com.reconinstruments.app_version"
        android:value="4.3.0" />
    <meta-data
        android:name="com.reconinstruments.ui_version"
        android:value="4.3.0" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/compass_icon"
        android:label="@string/app_name"
        android:theme="@style/ReconTheme.NoTitleBar" >
        <uses-library
            android:name="com.reconinstruments.os"
            android:required="true" />

        <activity
            android:name="com.reconinstruments.demo.compass.CompassActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:icon="@drawable/compass_icon"
            android:label="@string/app_name"
            android:launchMode="singleInstance" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>